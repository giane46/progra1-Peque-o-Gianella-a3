Algoritmo Ejercicio3
	Escribir "El capital de Michaela es"
	Leer a
	Escribir "El capital de Efrain es"
	Leer b
	Escribir "El capital de Even es"
	Leer c
	capitalTotal <- a+b+c
	Michaela <- (a/capitalTotal)*100
	Efrain <- (b/capitalTotal)*100
	Even <- (c/capitalTotal)*100
	Escribir "El capital total es " , capitalTotal
	Escribir "Porcentaje de Michaela es " , Michaela
	Escribir "Porcentaje de Efrain es " , Efrain
	Escribir "Porcentaje de Even es " , Even
FinAlgoritmo
